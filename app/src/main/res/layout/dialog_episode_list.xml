<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título de la lista de episodios -->
    <TextView
        android:id="@+id/textSeriesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/episode_list_title"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp" />

    <!-- Lista de episodios -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEpisodes"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scrollbars="vertical"
        android:contentDescription="@string/episode_list_recycler_description" />

    <!-- Contenedor de botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="16dp">

        <!-- Botón para eliminar episodio -->
        <TextView
            android:id="@+id/buttonDeleteEpisode"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/delete_episode"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground" />

        <!-- Botón para añadir episodio -->
        <TextView
            android:id="@+id/buttonAddEpisode"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/add_episode"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground" />
    </LinearLayout>

</LinearLayout>
